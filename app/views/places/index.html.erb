<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="container">
    <h1>Places</h1>

    <table class="table">
      <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Lat</th>
        <th>Lng</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @places.each do |place| %>
        <tr>
          <td><%= place.name %></td>
          <td><%= place.description %></td>
          <td><%= place.lat %></td>
          <td><%= place.lng %></td>
          <td><%= link_to 'Edit', edit_place_path(place) %></td>
          <td><%= link_to 'Destroy', place, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Place', new_place_path, class: "btn btn-primary btn-block" %>

    <br><br>
  </div>
  <%= render partial: "layouts/map_view", :locals => {:markers => @markers.to_json} %>
</div>